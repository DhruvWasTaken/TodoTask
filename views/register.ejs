	<%- include("partials/nav.ejs") %>
	<div id="formpart" class="jumbotron">
		<h2 style="text-align: center;">Sign Up!</h2>
		<form action="/register" method="POST">
			
		  	<div class="form-group">
		    	<label for="exampleInputEmail1">Email</label>
